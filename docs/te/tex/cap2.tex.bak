\subsection{Propiedades de la geométrica}
\begin{itemize}
 \item[$\circ$]\bf{La media:} $E(X)=\frac{1}{p}$ o $E(Y)=\frac{1-p}{p}$
 \item[$\circ$]\bf{La varianza:}$var(X)=var(Y)=\frac{1-p}{p^2}$
 \item[$\circ$]\bf{Las funciones generatrices:}
 \begin{center}
 $G_X(s)=\frac{sp}{1-s(1-p)}$ o $G_Y(s)=\frac{p}{1-s(1-p)}$, $\; \vert s \vert < (1-p)^{-1}$
 \end{center}
 \item[$\circ$]\textbf{La moda:} es el valor de la variable que tiene asociada mayor probabilidad. Es fácil comprobar (Véase la gráfica \ref{imagen}) que:
 \[P(x_i)\leq P(x=1) \forall x_i\]
 \item[$\circ$]\bf{La mediana $M_e$:} será aquel valor de la variable en el cual la función de distribución toma el valor 0.5. Así: $F(M_e)=1-q^M=\frac{1}{2}\Rightarrow q^M = \frac{1}{2}$
,por lo que, $M_e \cdot ln(q)=ln(1)-ln(2)=-ln(2)\longrightarrow M_e=\frac{-ln(2)}{ln(q)}$
 \item[$\circ$]\bf{Función de Momentos (F.G.M):}
 \begin{equation}\label{per}
   \begin{split}
     \varphi(t) & =E[e^{tx}]=\sum_{x=1}^{\infty} {e^{tx} \cdot p \cdot q^{x-1}} =\frac{p}{q}\sum_{x=1}^{\infty} {(e^{t} \cdot q)}^x=\lim\limits_{x \rightarrow -\infty}\frac{p}{q}\left( qe^t + (qe^t)^2+...+(qe^t)^n\right)\\
                          & =\lim\limits_{x \rightarrow -\infty}\frac{p}{q} \frac{(qe^t)^{n+1}-qe^t}{qe^t-1} ==\frac{p}{q} \frac{(qe^t}{1-qe^t} =p \frac{e^t}{1-qe^t} ==\frac{p}{e^{-t}-q}\\
                          & =p(e^{-t}-q)^{-1}
   \end{split}
 \end{equation}

 Por lo que queda establecida que la F.G.M. tiene la expresión:
 \begin{center}
 $\varphi(t)= p(e^{-t}-q)^{-1}$
 \end{center}
\end{itemize}
